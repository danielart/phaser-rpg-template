        "rollup-plugin-copy": "^3.4.0",
        "rollup-plugin-serve": "^2.0.1",
        "rollup-plugin-typescript2": "^0.32.1",
        "rollup-pluginutils": "^2.8.2",
        "terser": "^5.14.2",
